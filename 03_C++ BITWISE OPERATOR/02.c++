// LEFT SHIFT --> IF 1 THEN * BY 2[ <<] and RIGHT SHIFT --> 1 THEN / BY 2 [>>] operators//

# include <iostream>
using namespace std;
int main(){
    int a = 17;
    
    cout<<"LEFT SHIFT : "<<(17<<1)<<endl;
    cout<<""<<endl;
    cout<<"LEFT SHIFT : "<<(17<<2)<<endl;
    cout<<""<<endl;
    cout<<"RIGHT SHIFT : "<<(a>>1)<<endl;
    cout<<""<<endl;
    cout<<"RIGHT SHIFT : "<<(a>>2)<<endl;
    cout<<""<<endl;
}                                   